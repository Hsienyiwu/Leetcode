from collections import Counter

class Solution:
    def minWindow(self, s: str, t: str) -> str:
        need = Counter(t)
        Window = {}
        left = right = 0
        valid = 0

        start = 0
        min_len = float('inf')

        while right < len(s):
            c = s[right]  # 取字串中某一個字元
            right += 1

            if c in need:
                Window[c] = Window.get(c, 0) + 1
                if Window[c] == need[c]:
                    valid += 1

            # 縮小窗口的時機: 當前區間已經符合需求
            while valid == len(need):
                # 更新最短窗口
                if right - left < min_len:
                    start = left
                    min_len = right - left

                d = s[left]
                left += 1
                if d in need:
                    if Window[d] == need[d]:
                        valid -= 1
                    Window[d] -= 1

        return "" if min_len == float('inf') else s[start:start + min_len]
