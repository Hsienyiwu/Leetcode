from typing import List

class Solution:
    def longestOnes(self, nums: List[int], k: int) -> int:
        left = 0
        zero_cnt = 0
        ans = 0

        for right, x in enumerate(nums):
            if x == 0:
                zero_cnt += 1

            # 違規就縮：窗口中的 0 超過 k
            while zero_cnt > k:
                if nums[left] == 0:
                    zero_cnt -= 1
                left += 1

            # 窗口目前合法，更新答案
            ans = max(ans, right - left + 1)

        return ans
